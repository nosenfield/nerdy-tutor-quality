            "url": {
              "raw": "{{baseUrl}}/api/flags/:flag_id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "flags", ":flag_id"],
              "variable": [
                {
                  "key": "flag_id",
                  "value": "flag_123"
                }
              ]
            }
          }
        },
        {
          "name": "Resolve Flag",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"resolution_notes\": \"Flag resolved after coaching session\",\n  \"coach_agreed\": true,\n  \"intervention_type\": \"coaching_session\",\n  \"intervention_description\": \"Conducted one-on-one coaching session\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/flags/:flag_id/resolve",
              "host": ["{{baseUrl}}"],
              "path": ["api", "flags", ":flag_id", "resolve"],
              "variable": [
                {
                  "key": "flag_id",
                  "value": "flag_123"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Analytics",
      "item": [
        {
          "name": "Overview",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/analytics/overview",
              "host": ["{{baseUrl}}"],
              "path": ["api", "analytics", "overview"]
            }
          }
        },
        {
          "name": "Trends",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/analytics/trends?metric=avg_score&period=30d&group_by=day",
              "host": ["{{baseUrl}}"],
              "path": ["api", "analytics", "trends"],
              "query": [
                {
                  "key": "metric",
                  "value": "avg_score",
                  "description": "Metric: avg_score, flag_rate, no_show_rate, reschedule_rate"
                },
                {
                  "key": "period",
                  "value": "30d",
                  "description": "Period: 7d, 30d, 90d, 1y"
                },
                {
                  "key": "group_by",
                  "value": "day",
                  "description": "Group by: day, week, month"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}

