            }
          }
        },
        {
          "name": "Get Tutor Score",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/tutors/:tutor_id/score",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tutors", ":tutor_id", "score"],
              "variable": [
                {
                  "key": "tutor_id",
                  "value": "tutor_123"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Flags",
      "item": [
        {
          "name": "List Flags",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/flags?limit=50&offset=0",
              "host": ["{{baseUrl}}"],
              "path": ["api", "flags"],
              "query": [
                {
                  "key": "tutor_id",
                  "value": "",
                  "description": "Filter by tutor ID",
                  "disabled": true
